    <select id="findIsExist" parameterType="java.lang.String" resultType="java.lang.Integer" >
		select count(1) cnt
        from tb_user  where phone = #{phone} 
	</select> 

    <select id="findUserByPhone" parameterType="java.lang.String" resultType="User" >
		select id,user_code userCode,
		phone,pwdhash,
		start_date startDate,
		end_date endDate,
		is_loginlocked isLoginlocked,
		loginlock_time loginlockTime,
		is_smslocked isSmslocked,
        smslock_time smslockTime,
        user_type userType,reg_time regTime,
        `status`,
        create_time createTime,modify_time modifyTime 
        from tb_user  where phone = #{phone}
	</select> 
	
	<insert id="add" parameterType="com.qkl.tfcc.api.po.user.User" >
	 insert into tb_user (user_code,phone,pwdhash,user_type,reg_time,status,create_time,modify_time)
	 values(
	 #{userCode},
	 #{phone},
	 #{pwdhash},
	 #{userType},
	 #{regTime},
	 #{status},
	 #{createTime},
	 #{modifyTime}
	 )	 
	 </insert>
	
	  <update id="updatesms" parameterType="java.util.Map" >    
	     update tb_user 
	     set is_smslocked = #{is_smslocked},
	         smslock_time = #{smslock_time},
	          modify_time = #{modify_time}
	     where phone = #{phone}     
     </update>
     
     <update id="updatepwd" parameterType="java.util.Map" >    
	     update tb_user 
	     set pwdhash = #{pwdhash},
	          modify_time = #{modify_time}
	     where phone = #{phone}     
     </update>
     
      <update id="updatephone" parameterType="java.util.Map" >    
	     update tb_user 
	     set phone = #{phone},
	         modify_time = #{modify_time}
	     where user_code = #{usercode}     
